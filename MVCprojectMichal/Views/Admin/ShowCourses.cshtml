@model IEnumerable<MVCprojectMichal.Models.Courses>

@{
    ViewBag.Title = "ShowSearch";
}
<center>
    @*<h2>ShowSearch</h2>*@
    <h1 style="color:hotpink">Courses Schedule</h1><br />
    <table class="table">
        <tr>
            <th><font color="white">
    @Html.DisplayNameFor(model => model.CourseName)
</font></th>
            <th><font color="white">
    @Html.DisplayNameFor(model => model.CourseId)
</font></th>
            <th><font color="white">
    @Html.DisplayNameFor(model => model.LecturerId)
</font></th>
            <th><font color="white">
    @Html.DisplayNameFor(model => model.ClassRoom)
</font></th>
            <th><font color="white">
    @Html.DisplayNameFor(model => model.Day)
</font></th>
            <th><font color="white">
    @Html.DisplayNameFor(model => model.Hours)
</font></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td><font color="white">
    @Html.DisplayFor(modelItem => item.CourseName)
</font></td>
            <td><font color="white">
    @Html.DisplayFor(modelItem => item.CourseId)
</font></td>
            <td><font color="white">
    @Html.DisplayFor(modelItem => item.LecturerId)
</font></td>
            <td><font color="white">
    @Html.DisplayFor(modelItem => item.ClassRoom)
</font></td>
            <td><font color="white">
    @Html.DisplayFor(modelItem => item.Day)
</font></td>
            <td><font color="white">
    @Html.DisplayFor(modelItem => item.Hours)
</font></td>
            <td><font color="white">
    @Html.ActionLink("Edit", "Edit", new { id = item.CourseId })
</font></td>
        </tr>

        }

    </table>
</center>
<center>
    <div>
        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
        @Html.ActionLink("Back to Home page", "Home")
    </div>
    <div>
 @Html.ActionLink("Log-Off", "LogOff", "Home")
    </div>
</center>